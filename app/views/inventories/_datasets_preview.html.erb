<% if datasets.present? %>
  <div class="col-md-12 preview-table">
    <strong><%= file_structure_feedback(datasets) %></strong>
    <table class="table table-condensed table-bordered table-striped" id="datasets_preview">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Publisher</th>
          <th>Modified</th>
          <th>DownloadURL</th>
        </tr>
      </thead>
      <tbody>
        <% datasets.each do |dataset| %>
          <tr class='<%= preview_dataset_class(dataset) %>'>
            <td><%= dataset.title %></td>
            <td><%= dataset.description %></td>
            <td><%= dataset.publisher %></td>
            <td><%= dataset.modified %></td>
            <td></td>
          </tr>
          <% dataset.distributions.each do |distribution| %>
            <tr class='<%= preview_dataset_class(dataset) %>'>
              <td><%= distribution.title %></td>
              <td><%= distribution.description %></td>
              <td><%= dataset.publisher %></td>
              <td><%= dataset.modified %></td>
              <td><%= distribution.downloadURL %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>