<%= render "layouts/flash_messages", :flash => flash %>
<br/>
<%= render "layouts/org_header" %>
<div class="container">
  <div class="dashboard-wrapper">
    <div class="section-heading">
      <span class="organization-icon h4">Editar perfil <%= @organization.title.upcase %></span>
    </div>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8 topic-form-holder data-controls">
        <%= form_for(@organization, html: {class: "form-horizontal"}) do |f| %>
          <div class="form-group text-right">
            <%= f.label :description, :class => "control-label col-sm-3" %>
            <div class="col-sm-9">
              <%= f.text_area :description, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group text-right">
            <%= f.label :logo_url, :class => "control-label col-sm-3" %>
            <div class="col-sm-9">
              <%= f.text_field :logo_url, :class => "form-control" %>
              <% if @organization.logo_url.present? %>
                <br/>
                <%= image_tag @organization.logo_url, :class => "logo-preview logo-round pull-left" %>
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <div class="submit-row col-sm-offset-3 col-sm-9 text-right">
              <%= f.button "Guardar", :type => "submit", :class => "btn button" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>