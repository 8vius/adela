<div class="container-fluid">
  <div class="navbar navbar-default">
    <div class="navbar-header">
      <%= link_to "ADELA", root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Cambiar contraseña", edit_user_registration_path %></li>
          <li><%= link_to "Cerrar sesión", destroy_user_session_path, :method => :delete %></li>
        </ul>
        <div class="navbar-brand pull-right">
          <small>Tu organización: </small><%= link_to current_organization.title, organization_path(current_organization), :class => "h3" %>
        </div>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Iniciar sesión", new_user_session_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<% if current_organization.present? %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 disabled-tab">
        <div class="first-step">
          <h3>Plan de apertura <br/> <small>No tienes un plan de datos todavía.</small></h3>
        </div>
      </div>
      <a href='<%= organization_path(current_organization) %>'>
        <div class="col-md-6 disabled-tab step-tab">
          <div class="second-step">
            <h3>
              Inventario de datos
              <br/>
              <% if current_organization.last_file_version.present? %>
                <small>Última actualización: <strong><%= I18n.l(current_organization.last_file_version.created_at, :format => :short) %></strong></small>
                <% if current_organization.current_catalog.present? %>
                  <br/>
                  <small>Última publicación: <strong><%= I18n.l(current_organization.current_catalog.publish_date, :format => :short) %></strong></small>
                <% end %>
              <% else %>
                <small>No tienes un inventario de datos cargado todavía.</small>
              <% end %>
            </h3>
          </div>
        </div>
      </a>
    </div>
  </div>
<% end %>