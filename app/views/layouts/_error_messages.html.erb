<% if object.errors.any? %>
  <div class="container">
    <div class="alert alert-danger">
      <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li>
          <% if index.present? %>
            <%= "Registro #{index + 1}:" %>
          <% end %>
          <%= msg %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>